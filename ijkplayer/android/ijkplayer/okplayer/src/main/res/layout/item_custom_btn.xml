<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/img_item_edit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_item_edit"
        android:layout_marginLeft="@dimen/ijk_horizontal_margin">

        <TextView
            android:id="@+id/txt_item_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/slv_item_height0"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_item_resolution"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/slv_item_height0"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/slv_item_height0"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="16dp"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/btn_item_click"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/play_selector"
        android:checked="false"
        android:button="@null"
        />

</RelativeLayout>